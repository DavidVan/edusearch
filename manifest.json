{
  "manifest_version": 2,

  "name": "YouTube Thing",
  "description": "Generates summary of youtube videos.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "media/bookmark.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [{
    "matches": ["https://www.youtube.com/watch*"],
    "css": ["public/ext/style/style.css"],
    "js": ["public/lib/jquery.js", "public/ext/js/render.js"]
  }]
}
